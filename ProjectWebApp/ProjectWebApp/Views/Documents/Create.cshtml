@model HomeCareObjects.Model.Document

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="file" name="file" class="form-control" required />
            <div class="form-group">
                <label for="requestId" class="control-label"></label>
                <select id="requestId" name="requestId" class="form-control" asp-items="ViewBag.RequestId" required><option value="" disabled selected>Select Request ID</option></select>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index"><input type="button" value="Back To List" class="btn btn-danger" /></a>
</div>

