@model HomeCareObjects.Model.ServiceRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ServiceRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RequestId" />
            <input type="hidden" asp-for="RequestDate" />
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <label asp-for="RequestDescription" class="control-label">Request Description</label>
                <input asp-for="RequestDescription" class="form-control" />
                <span asp-validation-for="RequestDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateNeeded" class="control-label">Date Needed</label>
                <input asp-for="DateNeeded" class="form-control" />
                <span asp-validation-for="DateNeeded" class="text-danger"></span>
            </div>
             @if(User.IsInRole("Manager") || User.IsInRole("Admin")){ 
            <div class="form-group">
                    <label asp-for="TechnicianId" class="control-label">Technician</label>
                    <select asp-for="TechnicianId" class="form-control" asp-items="ViewBag.TechnicianId"><option value="0" disabled selected>Select Technician</option></select>
                <span asp-validation-for="TechnicianId" class="text-danger"></span>
            </div>
             } 
            <div class="form-group">
                <br />
                <input type="submit" asp-action="Edit" value="Save" class="btn btn-info" />
                @if (User.IsInRole("Manager") || User.IsInRole("Technician") || User.IsInRole("Admin"))
                {
                <input type="submit" asp-action="Completed" asp-route-id="@Model.RequestId" value="Mark As Completed" class="btn btn-success" />
                }
            </div>
        </form>
    </div>

   
</div>

<div>
    <br />
    <a asp-action="Index"><input type="button" value="Back To List" class="btn btn-danger" /></a>
</div>

