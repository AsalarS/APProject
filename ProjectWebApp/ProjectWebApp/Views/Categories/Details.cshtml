@model HomeCareWebApp.ViewModels.CategoryRequestsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Manager)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Manager.Email)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">Requests Overview</div>
            <div class="card-body">
                <p>Pending Requests: @Model.PendingRequests</p>
                <p>Active Requests: @Model.ActiveRequests</p>
                 <p>Completed Requests: @Model.CompletedRequests</p>
                <p>Overdue Requests: @Model.OverdueRequests</p> 
            </div>
        </div>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index"><input type="button" value="Back To List" class="btn btn-danger" /></a>
</div>
