@model IEnumerable<HomeCareObjects.Model.Notification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Notifications</h1>

@if (Model.Count() == 0)
{
    <caption>No Records Found</caption>
}else{
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th scope ="col">
                @Html.DisplayNameFor(model => model.NotificationText)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.User)
            </th scope="col">
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-primary">
            <td>
                @Html.DisplayFor(modelItem => item.NotificationText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.NotificationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NotificationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}